{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <nav class="navbar navbar-dark bg-dark" style='justify-content:flex-start;'>
            <a  class="btn btn-outline-light my-2 my-sm-0" href="/"> Home </a>
            <a  class="btn btn-outline-primary my-2 my-sm-0" href="/login"> Connexion </a>
            <a class="btn btn-outline-primary my-2 my-sm-0" href="/register"> Créer un compte</a>
    </nav>

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

<div class="col-sm-12">
<h1 align=center>Inscription</h1>
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, {
            label: 'Email : '
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe : '
        }) }}
        {{ form_row(registrationForm.nom, {
            label: 'Nom : '
        }) }}
        {{ form_row(registrationForm.prenom, {
            label: 'Prénom : '
        }) }}
        {{ form_row(registrationForm.pts_comp, {
            label: 'Vos points de compétences : '
        }) }}
        {{ form_row(registrationForm.agreeTerms, {
            label: 'Vous acceptez les termes et conditions des CGUs : '
        }) }}

        <button type="submit" class="btn btn-outline-success">S'inscrire</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}

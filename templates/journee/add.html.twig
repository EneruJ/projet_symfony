{% extends 'base.html.twig' %}

{% block title %}Hello JourneeController!{% endblock %}

{% block body %}

<nav class="navbar navbar-dark bg-dark" style='justify-content:flex-start;'>
        <a  class="btn btn-outline-warning my-2 my-sm-0" href="/logout"> Déconnexion </a>
        <a  class="btn btn-outline-primary my-2 my-sm-0"  style='margin-left: 10px;' href="/mesjours"> Mes journée </a>
        <p style='color:white;margin-left: 10px;'> </p> 

        <a class="btn btn-outline-success my-2 my-sm-0" href="/journee/add" style='margin-left: auto;' >Crée une journée</a>

</nav>

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Ajouter un produit ✅</h1>
    {{ form_start(journeeForm) }}
    {{ form_row(journeeForm.titre) }}
    {{ form_row(journeeForm.description) }}
    {{ form_row(journeeForm.date) }}
    {{ form_row(journeeForm.lieu) }}
    {{ form_row(journeeForm.nb_participants_max) }}
    {{ form_row(journeeForm.niveau) }}
    <button type="submit" class="btn btn-primary">{{ button_label|default('Ajouter') }}</button>
    {{ form_end(journeeForm) }}
</div>
{% endblock %}